<p style="color: green"><%= notice %></p>

<%= render @history %>

<div>
  <%= link_to "Edit this history", edit_history_path(@history) %> |
  <%= link_to "Back to histories", histories_path %>

  <%= button_to "Destroy this history", @history, method: :delete %>
</div>


<h2>History</h2>
<table class="table">
<thead>
<tr>
  <th>Title</th>
  <th>Author</th>
</tr>
</thead>
<tr>
  <% @history.versions.each do |version| %>
  <%= tag.tr do %>
        <%= tag.td version.id %>
        <%= tag.td version.whodunnit %>
        <%= tag.td link_to "rollback", history_rollback_path(@history, version: version) %>
        <%= tag.td do %>
          <%= tag.ul class: "list-group" do %>
            <li class='list-group-item'>
              <strong>First Name:</strong> 
              <%= version.changed_object.title %>
            </li>
            <li class='list-group-item'>
              <strong>Last Name:</strong> 
              <%= version.changed_object.author %>
            </li>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <td>
</tr>