<h1 class="center"><mark>List of student Details</mark></h1>
<div class="container my-3">
<div class="row justify-content-center">
<div class="col-9 my-4">
<div class="card text-center shadow mb-5 bg-light">

<center>
<table> 
  <th>Title</th>
  <th colspan=3>Actions</th>
  <% @students.each do |student| %>
  <tr>  
    <td><%= student.student_name %></td>
    <td><%= button_to "Show", student_path(student.id), method: :get %></td>
    <td><%= button_to "Edit", edit_student_path(student.id), method: :get %></td>
    <td><%= button_to "Delete", student_path(student.id), method: :delete %></td>
  </tr>
  <% end %>
</table>
</center>

<center>
<div>
  <%= link_to "Add a product", new_student_path, title: "Add new user" %>
</div>
</center>