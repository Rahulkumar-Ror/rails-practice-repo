<div class="col-lg-6 mx-lg-auto">
<div class="card shadow">
<div class="card-header">
<h2 class="card-title text-center", style="color:red;">User Detials</h2>
<center>
  <div class="col-lg-7 mb-3 mt-3">
    <div class="card" >
      <div class="card-body">
        <th ><strong><u>Student Name:</u></strong></th><br/>
        <td><%= @student.student_name %></th><br/>
        <th><b><u>Email:</u></b></th><br/>
        <td><%= @student.email %></th><br/>
        <th><b><u>Phone:</u></th></b><br/>
        <td><%= @student.phone %></th><br/>
        <th><b><u>D.O.B:</u></th></b><br/>
        <td><%= @student.dob %></th><br/>
				<th><b><u>Photo:</u></th></b><br/>
        <% if @student.student_pic.attached? %>
        <td><%= image_tag @student.student_pic, width: "100%", height: "100%" %></th><br/><br/>
        <% end %>
        <br/><br/>
        <th><b><u>Images:</u></th></b><br/>
        <% if @student.student_pic.attached? %>
          <% @student.images.each do |image| %>
            <%= image_tag image, width: "100px" %><hr>
          <% end %>
        <% end %>
        <br/><br/>
        <th><b><u>Resume:</u></th></b><br/>
        <td><%= @student.student_resume %></th><br/>				
      </div>
    </div>
  </div>
</center>
</div>

<center>
<div>
  <td><%= button_to "Back ", students_path(@student), method: :get, class: "btn btn-primary float-right my-3 " %></td>
</div>
</center>